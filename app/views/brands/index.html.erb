<h1>Markalar</h1>
<table width="500">
  <tr>
    <th>Title</th>
    <th>İşlem</th>
  </tr>

  <% @brands.each do |brand| %>
    <tr>
      <td><%= brand.title %></td>
      <td><%= link_to 'Show', brand_path(brand) %></td>
      <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
      <td><%= link_to 'Destroy', brand_path(brand), method: :delete , data: {confirm: 'Silmek istediğinize emin misiniz?'}%></td>
    </tr>
  <% end %>
</table>
