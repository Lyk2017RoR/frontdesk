<h1>Ürünler</h1>
<table width="90%">
  <tr>
    <th>Başlık</th>
    <th>Fiyat</th>
    <th>Kategori</th>
    <th>Marka</th>
    <th>İşlem</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td><%= product.category.title %></td>
      <td><%= product.brand.title %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product_path(product), method: :delete , data: {confirm: 'Silmek istediğinize emin misiniz?'}%></td>
    </tr>
  <% end %>
</table>
